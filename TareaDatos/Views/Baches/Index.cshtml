@model IEnumerable<TareaDatos.Models.Bache>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pregunta1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Respuesta1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pregunta2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Respuesta2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latitud)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Longitud)
        </th>
        <th>
            <strong>Ubicación</strong>
        </th>
        <th>
            <strong>Referencia real</strong>
        </th>
    </tr>

@foreach (var item in Model) {    
        <tr>
            <td>
                <img src="@item.Imagen" alt="Alternate Text" width="300" class="thumbnail"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pregunta1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Respuesta1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pregunta2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Respuesta2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitud)
            </td>
            <td>                
               @Mapa.mapa(item.Latitud,item.Longitud)
            </td>
            <td>
                @Mapa.mapaReal(item.Latitud,item.Longitud)
            </td>
            <td>
               @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) |
               @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-list" }) |
               @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
}

</table>
